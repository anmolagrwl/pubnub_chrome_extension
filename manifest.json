{
  "name": "News Reader",
  "version": "1.0",
  "description": "News Reader powererd by PubNub and AWS Polly",
  "permissions": ["storage", "tabs", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/voice.png",
      "32": "images/voice.png",
      "48": "images/voice.png",
      "128": "images/voice.png"
    }
  },
  "icons": {
    "16": "images/voice.png",
    "32": "images/voice.png",
    "48": "images/voice.png",
    "128": "images/voice.png"
  },
  "manifest_version": 2
}